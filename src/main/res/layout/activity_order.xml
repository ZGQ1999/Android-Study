<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.miapplication.OrderActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@mipmap/top_top_or"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#E1B95A"/>

            <TextView
                android:layout_marginTop="-60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@mipmap/top1_top_or"/>

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@mipmap/center_center_or" />

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:background="@mipmap/center1_center_or"/>

            <TextView
                android:id="@+id/tv_goto_alipay"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@mipmap/bottom_bottom_or"/>

        </LinearLayout>


    </ScrollView>

</LinearLayout>